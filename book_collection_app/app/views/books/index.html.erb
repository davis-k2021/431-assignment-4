  <h2>Book Collection</h2>
  <%= link_to "Create New Book", new_book_path %>

  <br>
  <br>

  <table>

    <tr>
      <th>Book ID</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td>
          <%= link_to("Show", book_path(book)) %>
          <%= link_to("Edit", edit_book_path(book)) %>
          <%= link_to("Delete", delete_book_path(book)) %>
        </td>
      </tr>
    <% end %>

  </table>
