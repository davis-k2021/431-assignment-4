<% @book.errors.each do |attribute, message| %>
  <% if @book.errors[attribute].first == message %>
    <li>
      <%= @book.errors.full_messages_for(attribute).first %>
    </li>
  <% end %>
<% end %>

<table>
  <tr>
    <th>Title</th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= f.text_field(:author) %></td>
  </tr>
  <tr>
    <th>Genre</th>
    <td><%= f.collection_select(:genre, Book::GENRE, :to_s, :to_s, :include_blank => true) %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td><%= f.number_field(:price, in: 0.00..999999999.99, step: 0.01) %></td>
  </tr>
  <tr>
    <th>Date Published</th>
    <td><%= f.date_select(:published_date, :start_year => 1800, :end_year => 2020) %></td>
  </tr>
</table>