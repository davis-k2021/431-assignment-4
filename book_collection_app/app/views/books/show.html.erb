<%= link_to("Return to Book Collection", books_path) %>

<div>
  <h2>Show Book</h2>

  <table summary="Book detail view">
    <tr>
      <th>Title</th>
      <td><%= @book.title %></td>
    </tr>
    <tr>
      <th>Author</th>
      <td><%= @book.author %></td>
    </tr>
    <tr>
      <th>Genre</th>
      <td><%= @book.genre %></td>
    </tr>
    <tr>
      <th>Price</th>
      <td>$<%= @book.price %></td>
    </tr>
    <tr>
      <th>Date Published</th>
      <td><%= @book.published_date %></td>
    </tr>
    <tr>
  </table>
</div>
